// variables
global-font-family = Microsoft YaHei, HelveticaNeue-Light, "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, sans-serif

body
  font-family global-font-family
  font-size 15px
  background-color lighten(#eceef1, 30%)
  margin 0
  padding-top 55px
  color #34495e

a
  color #34495e
  text-decoration none

select
  background-color #fff
  border 1px solid #aaa
  border-radius 4px
  box-sizing border-box
  cursor pointer
  height 28px

input, textarea, keygen, select, button
  font-family global-font-family

input
  padding 4px
  border 1px solid #aaa
  border-radius 4px

button
  color #333
  background #eee
  border 1px solid #bbb
  outline none
  padding 3px 10px
  border-radius 3px

.fr
  float right
